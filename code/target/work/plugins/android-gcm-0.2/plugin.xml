<plugin name='android-gcm' version='0.2' grailsVersion='1.3.7 &gt; *'>
  <author>OSOCO</author>
  <authorEmail>diego.toharia@osoco.es</authorEmail>
  <title>Android GCM (Google Cloud Messaging) service plugin</title>
  <description>Provides a service to easily access the Google Cloud Messaging (GCM) services</description>
  <documentation>http://grails.org/plugin/android-gcm</documentation>
  <type>AndroidGcmGrailsPlugin</type>
  <resources>
    <resource>es.osoco.android.gcm.AndroidGcmService</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='https://github.com/slorber/gcm-server-repository/raw/master/releases' url='https://github.com/slorber/gcm-server-repository/raw/master/releases/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='com.google.android.gcm' name='gcm-server' version='1.0.2' />
    </compile>
    <runtime>
      <dependency group='com.googlecode.json-simple' name='json-simple' version='1.1' />
    </runtime>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>